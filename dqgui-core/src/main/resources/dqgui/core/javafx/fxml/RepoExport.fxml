<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hshannover.dqgui.core.controllers.RepoExport">
   <top>
      <VBox alignment="CENTER" styleClass="headers-region" BorderPane.alignment="CENTER">
         <children>
            <Label minWidth="-Infinity" styleClass="font-22" text="Repository Export">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="replaceVbox" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="selected" maxHeight="40.0" promptText="Choose folder to save exported results in..." styleClass="dqgui-textfield" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets top="1.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="select" minWidth="-Infinity" mnemonicParsing="false" onAction="#select" styleClass="dropshadow-button" text="Select root folder">
                     <HBox.margin>
                        <Insets left="6.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <TextArea editable="false" minHeight="300.0" styleClass="import-export-text-area" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextArea>
            <HBox>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="execute" minWidth="-Infinity" mnemonicParsing="false" onAction="#execute" prefWidth="100.0" styleClass="dropshadow-button" text="Export">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="close" minWidth="-Infinity" mnemonicParsing="false" onAction="#close" prefWidth="100.0" styleClass="dropshadow-button" text="Close" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
